<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_marginTop="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        >
        <TextView
            android:id="@+id/makhoahoc"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:text="Mã hóa học"
            />
        <TextView
            android:id="@+id/tenkhoahoc"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="5dp"

            android:layout_below="@+id/makhoahoc"
            android:text="lop hoc 321"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/giangvien"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenkhoahoc"
            android:text="nguyen van a"
            />
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="5dp"
            android:id="@+id/startday"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:text="ngay bat dau"
            android:layout_height="wrap_content"
            android:layout_below="@+id/giangvien"

            />
        <TextView
            android:id="@+id/endday"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/startday"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/giangvien"
            android:text="ngay ket thuc"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/mota"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/endday"
            android:text="mo ta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/btnchinhsua"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_edit_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <Button
            android:id="@+id/btnxoa"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_delete_forever_black_24dp"
            android:layout_width="40dp"
            android:layout_below="@+id/btnchinhsua"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>